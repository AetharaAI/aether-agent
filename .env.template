# ============================================

# NVIDIA API Key (required for Kimik2.5)
NVIDIA_API_KEY=your_nvidia_api_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Fleet Integration (Optional)
# ============================================

# OpenClaw Fleet API
FLEET_API_URL=
FLEET_API_KEY=

